<h1 align="center">Listing all recurring expenses</h1>
<br/>
  <div class ="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class ="well well-lg">
        <div class="expenselist">
        <table align="center" class ="exptable">  
          <tr class="headingrow">
            <th class ="headdef">Expense</th>
            <th class= "headdef">Duration</th>
            <th class= "headdef">Start date</th>
            <th></th>
            <th></th>
          </tr>

          <% @rec_expense.each do |f| %>

            <tr>
              <td class="tdname"><%= f.name %></td>
              <td class="tdamt"><%= f.duration %></td>
              <td class="tdamt"><%= f.reminder_date %></td>
              
              <td class="tdedit"> <%= link_to "Edit", edit_expense_path(f), class: "btn btn-xs btn-primary" %></td>
              <td class="tddel"> <%= link_to "Delete", expense_path(f), method: :delete, data: { confirm: "Are you sure you want to delete the expense?"}, class: "btn btn-xs btn-danger" %> </td>
            </tr> 
          
          <% end %>
        </table>
        <br/>
        </div>
        <p align = "center"><%= link_to "Add a recurring expense",new_recurring_expense_path, class: "btn btn-primary" %>
        </p>
      </div>
    </div>
  </div>


