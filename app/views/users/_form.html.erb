<%= render 'shared/errors', obj: @user %>

<div align = "center" class='row'>
  <div class='col-xs-6 col-xs-offset-4'>
    <%= form_for(@user, :authenticity_token => true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-xs-6">
            <%= f.text_field :name, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-xs-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-xs-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>  
      <div class="form-group">
        <div align = "center" >
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary') %>
        </div>
      </div>
    <% end %>
    <div align = "center">
       <%= link_to "Cancel", expenses_path ,class: 'btn btn-primary' %> 
    </div>
  </div>
</div>
