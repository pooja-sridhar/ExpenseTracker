<h1 align = "center">Log In</h1>

	<div class='row'>
		<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
			<!-- <div class="col-xs-6"> -->
			<div class="form-group">
				<div class="control-label col-md-4">
					<%= f.label :email %>
				</div>
			</div>	
			<div class="col-md-4">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
			</div>
			
			<div class="form-group">
				<div class="control-label col-md-4">
					<%= f.label :password %>
				</div>
			</div>	
			<div class="col-md-4">
				<%= f.password_field :password, class: "form-control",placeholder: "Enter password", autocomplete: "off" %>
			</div>
	
			<div class="form-group">
				<div align ="center" class="col-xs-4 col-xs-offset-4">
						<%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
				</div>
			</div>
		<% end %>
	</div>
	
	<br/><br/>
	<div align ="center" class="col-xs-4 col-xs-offset-4">
		[ <%=  link_to "Back to expenses listing", expenses_path %> ]
	</div>




